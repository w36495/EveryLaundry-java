<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <TextView
        android:id="@+id/search_distance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:text="19km"
        android:layout_marginRight="5dp"
        android:paddingHorizontal="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/search_name"/>

    <TextView
        android:id="@+id/search_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="이름"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_distance"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_zip_code"/>

    <TextView
        android:id="@+id/search_zip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="우편번호"
        android:layout_marginVertical="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/search_name"
        app:layout_constraintLeft_toLeftOf="@id/search_name"
        app:layout_constraintRight_toLeftOf="@id/search_address"
        app:layout_constraintBottom_toTopOf="@id/search_tel"/>

    <TextView
        android:id="@+id/search_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="도로명 주소"
        app:layout_constraintTop_toBottomOf="@id/search_name"
        app:layout_constraintLeft_toRightOf="@id/search_zip_code"
        app:layout_constraintRight_toRightOf="@id/search_name"
        app:layout_constraintBottom_toTopOf="@id/search_tel"/>

    <TextView
        android:id="@+id/search_tel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="전화번호"
        app:layout_constraintTop_toBottomOf="@id/search_zip_code"
        app:layout_constraintLeft_toLeftOf="@id/search_zip_code"
        app:layout_constraintRight_toRightOf="@id/search_address"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>