<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/setting_post_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="수선 어떻게 해요?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_post_item_layout"/>

    <LinearLayout
        android:id="@+id/setting_post_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/setting_post_item_title"
        app:layout_constraintLeft_toLeftOf="@id/setting_post_item_title"
        app:layout_constraintRight_toRightOf="@id/setting_post_item_title">

        <TextView
            android:id="@+id/setting_post_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="#수선"
            android:textColor="@color/textColor"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/setting_post_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2021/11/20"
            android:textColor="@color/textColor"
            android:layout_marginLeft="10dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>