<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signup_title"/>

    <ImageView
        android:id="@+id/signup_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/signup_title"
        app:layout_constraintLeft_toLeftOf="@id/signup_title"
        app:layout_constraintRight_toRightOf="@id/signup_title"
        app:layout_constraintBottom_toTopOf="@id/signup_img_save"/>

    <Button
        android:id="@+id/signup_img_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진등록"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_img"
        app:layout_constraintLeft_toLeftOf="@id/signup_img"
        app:layout_constraintRight_toRightOf="@id/signup_img"
        app:layout_constraintBottom_toTopOf="@id/signup_id" />

    <EditText
        android:id="@+id/signup_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력하세요."
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_img_save"
        app:layout_constraintLeft_toLeftOf="@id/signup_img_save"
        app:layout_constraintRight_toRightOf="@id/signup_img_save"
        app:layout_constraintBottom_toTopOf="@id/signup_password"/>

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요."
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/signup_id"
        app:layout_constraintLeft_toLeftOf="@id/signup_id"
        app:layout_constraintRight_toRightOf="@id/signup_id"
        app:layout_constraintBottom_toTopOf="@id/signup_nick_name"
        />

    <EditText
        android:id="@+id/signup_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력하세요."
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/signup_password"
        app:layout_constraintLeft_toLeftOf="@id/signup_password"
        app:layout_constraintRight_toRightOf="@id/signup_password"
        app:layout_constraintBottom_toTopOf="@id/signup_email"/>

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력하세요."
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/signup_nick_name"
        app:layout_constraintLeft_toLeftOf="@id/signup_nick_name"
        app:layout_constraintRight_toRightOf="@id/signup_nick_name"
        app:layout_constraintBottom_toTopOf="@id/signup_btn_login"/>

    <Button
        android:id="@+id/signup_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/signup_email"
        app:layout_constraintLeft_toLeftOf="@id/signup_email"
        app:layout_constraintRight_toRightOf="@id/signup_email" />

</androidx.constraintlayout.widget.ConstraintLayout>